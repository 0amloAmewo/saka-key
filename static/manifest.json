{
  "name": "Saka Key",
  "version": "0.6",
  "description": "A keyboard interface to the web",
  "manifest_version": 2,
  "background": {
    "scripts": ["background_page.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script_loader.js"],
      "all_frames": true,
      "run_at": "document_start",
      "match_about_blank": true
    }
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html",
    "default_title": "Saka Key"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
    },
  "permissions": [
    "tabs",
    "sessions",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "background_page.js.map",
    "content_script.js",
    "content_script.js.map",
    "content_script_loader.js.map",
    "options.js",
    "options.js.map",
    "popup.js.map",
    "options.html",
    "Roboto-Regular.tff"
    ]
}
