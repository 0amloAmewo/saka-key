    },
    {
      "type": "number",
      "label": "Padding Right",
      "key": "hintPaddingRight",
      "visible": "hintUseCustomCSS = false",
      "min": "0"
    },
    {
      "type": "number",
      "label": "Padding Top",
      "key": "hintPaddingTop",
      "visible": "hintUseCustomCSS = false",
      "min": "0"
    },
    {
      "type": "number",
      "label": "Padding Bottom",
      "key": "hintPaddingBottom",
      "visible": "hintUseCustomCSS = false",
      "min": "0"
    },
    {
      "type": "number",
      "label": "Border Width",
      "key": "hintBorderWidth",
      "visible": "hintUseCustomCSS = false",
      "min": "0"
    },
    {
      "type": "number",
      "label": "Border Radius",
      "key": "hintBorderRadius",
      "visible": "hintUseCustomCSS = false",
      "min": "0"
    },
    {
      "type": "checkbox",
      "label": "Shadow",
      "key": "hintShadow",
