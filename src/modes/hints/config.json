    },
    {
      "type": "number",
      "label": "Font Size",
      "key": "hintFontSize",
      "visible": "hintUseCustomCSS = false",
      "min": "1"
    },
    {
      "type": "select",
      "label": "Font Weight",
      "key": "hintFontWeight",
      "visible": "hintUseCustomCSS = false",
      "choices": ["100", "200", "300", "400", "500", "600", "700", "800", "900"]
