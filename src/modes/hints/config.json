  "options": [
    {
      "type": "text",
      "label": "Hint Characters",
      "key": "hintChars"
    },
    {
      "type": "checkbox",
      "label": "Detect Hints Using Cursor Style",
      "key": "hintDetectByCursorStyle"
    },
    {
      "type": "select",
      "label": "Hint Horizontal Placement",
      "key": "hintHorizontalPlacement",
      "choices": ["left", "center", "right"]
    },
    {
      "type": "select",
      "label": "Hint Vertical Placement",
      "key": "hintVerticalPlacement",
      "choices": ["top", "center", "bottom"]
    },
    {
      "type": "header",
      "label": "Hint Appearance"
    },
    {
      "type": "checkbox",
      "label": "Use Custom CSS",
      "key": "hintUseCustomCSS"
    },
    {
      "type": "color",
      "label": "Text Color",
      "key": "hintTextColor",
      "visible": "hintUseCustomCSS = false"
    },
    {
      "type": "color",
      "label": "Background Color",
      "key": "hintBackgroundColor",
      "visible": "hintUseCustomCSS = false"
    },
    {
      "type": "color",
