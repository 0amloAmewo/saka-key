{
  "name": "Hints",
  "description": "Link hints for acivating links and selecting inputs",
  "options": [
    {
      "type": "text",
      "label": "Hint Characters",
      "key": "hintChars"
    },
    {
      "type": "checkbox",
      "label": "Use Custom CSS",
      "key": "useCustomCSS"
    },
    {
      "type": "checkbox",
      "label": "Use Default Colors",
      "key": "customColors",
      "visible": "useCustomCSS = false"
    },
    {
      "type": "color",
      "label": "Text Color",
      "key": "textColor",
      "visible": "customColors is visible && customColors = false"
    },
    {
      "type": "color",
      "label": "Background Color",
      "key": "backgroundColor",
      "visible": "customColors is visible && customColors = false"
    },
    {
      "type": "color",
      "label": "Border Color",
      "key": "borderColor",
      "visible": "customColors is visible && customColors = false"
    },
    {
      "type": "text",
      "label": "Font Size",
      "key": "fontSize",
      "visible": "useCustomCSS = false"
    },
    {
      "type": "text",
      "label": "Border Radius (pixels)",
      "key": "borderRadius",
      "visible": "useCustomCSS = false"
    },
    {
      "type": "checkbox",
      "label": "Shadow",
      "key": "shadow",
      "visible": "useCustomCSS = false"
    },
    {
      "type": "textarea",
      "label": "Hint CSS",
      "key": "hintCSS",
      "visible": "useCustomCSS = true"
    },
    {
      "type": "textarea",
      "label": "Normal Character CSS",
      "key": "normalCharCSS",
      "visible": "useCustomCSS = true"
    },
    {
      "type": "textarea",
      "label": "Active Character CSS",
      "key": "activeCharCSS",
      "visible": "useCustomCSS = true"
    }
  ]
}